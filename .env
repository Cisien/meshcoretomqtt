# ============================================================================
# MeshCore to MQTT - Default Configuration
# ============================================================================
# DO NOT EDIT THIS FILE - Create .env.local to override settings
# This file contains default values and will be overwritten on updates
# ============================================================================

# -----------------------------------------------------------------------------
# Update Configuration
# -----------------------------------------------------------------------------
# Source repository and branch for updates (configured by installer)
MCTOMQTT_UPDATE_REPO=Cisien/meshcoretomqtt
MCTOMQTT_UPDATE_BRANCH=main

# -----------------------------------------------------------------------------
# Serial Configuration
# -----------------------------------------------------------------------------
MCTOMQTT_SERIAL_PORTS=/dev/ttyACM0
MCTOMQTT_SERIAL_BAUD_RATE=115200
MCTOMQTT_SERIAL_TIMEOUT=2

# -----------------------------------------------------------------------------
# Topic Configuration
# -----------------------------------------------------------------------------
# Template variables supported: {IATA}, {PUBLIC_KEY}
# Example: meshcore/{IATA}/{PUBLIC_KEY}/status
MCTOMQTT_TOPIC_STATUS=meshcore/{IATA}/{PUBLIC_KEY}/status
MCTOMQTT_TOPIC_PACKETS=meshcore/{IATA}/{PUBLIC_KEY}/packets
MCTOMQTT_TOPIC_DEBUG=meshcore/{IATA}/{PUBLIC_KEY}/debug
MCTOMQTT_TOPIC_RAW=meshcore/{IATA}/{PUBLIC_KEY}/raw

# Global IATA code (used if not specified per broker)
# This is a 3-letter airport code identifying your geographic region
MCTOMQTT_IATA=XXX

# -----------------------------------------------------------------------------
# MQTT Broker 1 Configuration
# -----------------------------------------------------------------------------
MCTOMQTT_MQTT1_ENABLED=false
MCTOMQTT_MQTT1_SERVER=mqtt.example.com
MCTOMQTT_MQTT1_PORT=1883
MCTOMQTT_MQTT1_TRANSPORT=tcp
MCTOMQTT_MQTT1_USE_TLS=false
MCTOMQTT_MQTT1_TLS_VERIFY=true
MCTOMQTT_MQTT1_CLIENT_ID_PREFIX=meshcore_
MCTOMQTT_MQTT1_QOS=0
MCTOMQTT_MQTT1_RETAIN=true
MCTOMQTT_MQTT1_KEEPALIVE=60

# Authentication - Username/Password
MCTOMQTT_MQTT1_USERNAME=
MCTOMQTT_MQTT1_PASSWORD=

# Authentication - Auth Token (alternative to username/password)
MCTOMQTT_MQTT1_USE_AUTH_TOKEN=false
MCTOMQTT_MQTT1_TOKEN_AUDIENCE=

# Per-broker topic overrides (optional)
# MCTOMQTT_MQTT1_TOPIC_STATUS=meshcore/{IATA}/{PUBLIC_KEY}/status
# MCTOMQTT_MQTT1_TOPIC_PACKETS=meshcore/{IATA}/{PUBLIC_KEY}/packets
# MCTOMQTT_MQTT1_IATA=XXX

# -----------------------------------------------------------------------------
# MQTT Broker 2 Configuration (Optional)
# -----------------------------------------------------------------------------
MCTOMQTT_MQTT2_ENABLED=false
# MCTOMQTT_MQTT2_SERVER=mqtt-us-v1.letsmesh.net
# MCTOMQTT_MQTT2_PORT=443
# MCTOMQTT_MQTT2_TRANSPORT=websockets
# MCTOMQTT_MQTT2_USE_TLS=true
# MCTOMQTT_MQTT2_USE_AUTH_TOKEN=true
# MCTOMQTT_MQTT2_TOKEN_AUDIENCE=mqtt-us-v1.letsmesh.net

# -----------------------------------------------------------------------------
# MQTT Broker 3 Configuration (Optional)
# -----------------------------------------------------------------------------
MCTOMQTT_MQTT3_ENABLED=false
# Add MCTOMQTT_MQTT3_* configuration as needed

# -----------------------------------------------------------------------------
# MQTT Broker 4 Configuration (Optional)
# -----------------------------------------------------------------------------
MCTOMQTT_MQTT4_ENABLED=false
# Add MCTOMQTT_MQTT4_* configuration as needed

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
MCTOMQTT_LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

